# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Slack Configuration
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=your-slack-bot-token  # Optional, for user lookups
SLACK_BYPASS_VERIFY=false  # Set to true in development to bypass signature verification

# LLM Configuration
LLM_PROVIDER=anthropic  # Options: "anthropic" or "openai"
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key  # Required if LLM_PROVIDER=openai
LLM_MODEL=claude-sonnet-4-20250514  # Model name (e.g., claude-sonnet-4-20250514, gpt-4o-mini)
LLM_CONFIDENCE_MIN=0.6  # Minimum confidence threshold (0.0-1.0)
LLM_MAX_OUTPUT_TOKENS=512  # Maximum output tokens

# Feature Flags
USE_LLM_CLASSIFIER=true  # Enable/disable LLM classification
DEBOUNCE_WINDOW_SECONDS=300  # Debounce window in seconds (default: 5 minutes)

# Environment
NODE_ENV=development  # Options: "development", "production", "test"
ENVIRONMENT=development  # Deployment environment

# Optional: Slack User Lookup
ENABLE_SLACK_USER_LOOKUP=true  # Enable Slack API user lookups
